{
  "build": {
    "beforeDevCommand": "pnpm start --port 1420",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/bing-wallpaper-client",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "wallpaper-client",
    "version": "1.0.5"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/128x128.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "protocol": {
        "asset": true,
        "assetScope": [
          "$HOME/**"
        ]
      },
      "clipboard":{
        "all": true,
        "readText": true,
        "writeText": true
      },
      "shell": {
        "all": true,
        "open": true
      },
      "http":{
        "all": true,
        "request": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "createDir": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "exists": true
      },
      "window": {
        "all": true,
        "close": false,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setClosable": false
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": false,
        "message": true,
        "open": true,
        "save": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "jasonsuiyt",
      "icon": [
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "width": 1080,
        "height": 650,
        "minHeight": 650,
        "minWidth": 1080,
        "titleBarStyle": "Overlay",
        "transparent": true
      }
    ]
  }
}
